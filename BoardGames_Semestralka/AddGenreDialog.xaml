<Window x:Class="BoardGames_Semestralka.AddGenreDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Přidat žánr"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="#FFFBEF"
        WindowStyle="None">

    <StackPanel Margin="20">
        <TextBlock Text="Zadejte nový žánr:" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBox x:Name="GenreTextBox" Width="250" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Zrušit" Width="80" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Přidat" Width="80" Background="#FF9A895F" Foreground="White" Click="Confirm_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
