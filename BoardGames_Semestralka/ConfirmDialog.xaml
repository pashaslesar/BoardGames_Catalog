<Window x:Class="BoardGames_Semestralka.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Potvrzení"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="#FFFBEF"
        WindowStyle="None">

    <StackPanel Margin="20">
        <TextBlock x:Name="MessageText"
                   Text="Opravdu chcete odstranit?"
                   TextWrapping="Wrap"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Ne" Width="75" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Ano" Width="75" Background="#FF6C6C" Foreground="White" Click="Confirm_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
